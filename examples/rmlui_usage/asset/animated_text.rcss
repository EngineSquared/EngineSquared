@keyframes rainbow-text {
    0% { color: rgb(255, 0, 0); }
    16% { color: rgb(255, 128, 0); }
    33% { color: rgb(255, 255, 0); }
    50% { color: rgb(0, 255, 0); }
    66% { color: rgb(0, 128, 255); }
    83% { color: rgb(128, 0, 255); }
    100% { color: rgb(255, 0, 0); }
}

#animated-text {
    font-size: 58dp;
    font-weight: bold;
    text-align: center;
    animation: 3s linear infinite rainbow-text;
}